<?xml version="1.0" encoding="utf-8"?>
<local:AccountPageBase
    x:Class="Fyreplace.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fyreplace.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="12">
        <TextBlock
            x:Uid="RegisterPage_Title"
            HorizontalAlignment="Center"
            Style="{StaticResource BodyStrongTextBlockStyle}" />
        <ComboBox
            x:Uid="AccountPageBase_Environment"
            HorizontalAlignment="Stretch"
            ItemsSource="{x:Bind EnvironmentNames}"
            SelectedIndex="{x:Bind SelectedEnvironmentIndex, Mode=TwoWay}" />
        <TextBox
            x:Name="Username"
            x:Uid="RegisterPage_Username" />
        <TextBox
            x:Name="Email"
            x:Uid="RegisterPage_Email" />
        <Button
            x:Name="Submit"
            x:Uid="RegisterPage_Submit"
            Margin="0,8,0,0"
            HorizontalAlignment="Stretch"
            Style="{ThemeResource AccentButtonStyle}"
            IsEnabled="{x:Bind AreInputsValid(Username.Text, Email.Text), Mode=OneWay}">
        </Button>
    </StackPanel>
</local:AccountPageBase>
