<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Fyreplace.Views.Controls.KeyboardShortcut"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fyreplace.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <StackLayout x:Key="StackLayout" Orientation="Horizontal" Spacing="8" />
        <DataTemplate x:Key="Key" x:DataType="local:KeyboardKey">
            <Border
                BorderBrush="{ThemeResource AccentTextFillColorDisabledBrush}"
                BorderThickness="1"
                CornerRadius="4">
                <TextBlock
                    Text="{x:Bind Value}"
                    FontFamily="Consolas"
                    Margin="8,4" />
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ItemsRepeater
        Layout="{StaticResource StackLayout}"
        ItemTemplate="{StaticResource Key}"
        ItemsSource="{x:Bind keyboardKeys}" />
</UserControl>
